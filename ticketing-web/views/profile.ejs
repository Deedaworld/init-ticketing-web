<!-- views/profile.ejs -->

<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
  <header>
    <!-- 로그아웃 버튼 -->
    <nav>
      <ul>
        <li><a href="/logout">로그아웃</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <section id="profile">
      <h2>프로필</h2>
      <% if (user) { %>
        <p>사용자명: <%= user.userName %></p>
        <p>이메일: <%= user.email %></p>
        <p>전화번호: <%= user.phone %></p>
      <% } else { %>
        <p>프로필을 볼 수 없습니다. 로그인이 필요합니다.</p>
      <% } %>
    </section>
  </main>

  <footer>
    <p>&copy; 2024 Ticketing Website</p>
  </footer>
</body>
</html>
